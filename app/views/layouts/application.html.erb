<!DOCTYPE html>
<html>
  <head>
    <title>Foodsharing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Food Recipes </a>
     
    <ul class="nav navbar-nav">
       <% if user_signed_in? %> 
          <li class="nav-item">               
            <%= link_to('Sign out', destroy_user_session_path, :method => :delete, class: 'nav-link'
                  ) %>              
          </li>
    
    <% else %>
    <li class="nav-item">               
            <%= link_to "Log in", user_session_path, class: 'nav-link'%>              
          </li>
      <li class="nav-item">
        <a class="nav-link" href="/auth/register/cmon_let_me_in">Sign Up</a>
      </li>
      <% end %>

      <li class ="nav-item">

    <%= link_to "Upload Video ", '#', class:'nav-link' %>
    </li>

     </ul>
     
  </nav>  
</header>

  <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

   <div class =" container">
    <%= yield %>
    <div>
  </body>
</html>
